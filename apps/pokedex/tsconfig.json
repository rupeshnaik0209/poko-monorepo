{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./app",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "pokodex": ["../../apps/pokedex/app/*"],
      "components": ["../../packages/components/src/*"],
      "utils": ["../../packages/utils/src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/**/*.tsx",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
